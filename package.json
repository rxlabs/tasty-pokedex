{
  "name": "tasty-pokedex",
  "version": "0.0.0",
  "description": "Pokédex using the Pokéapi.",
  "private": true,
  "keywords": [
    "brunch"
  ],
  "homepage": "https://github.com/rxlabs/tasty-pokedex",
  "bugs": "https://github.com/rxlabs/tasty-pokedex/issues",
  "repository": "rxlabs/tasty-pokedex",
  "license": "MIT",
  "author": {
    "name": "Evan Sosenko",
    "email": "razorx@evansosenko.com"
  },
  "scripts": {
    "ava": "BABEL_ENV=test ava",
    "brunch": "brunch",
    "flow": "flow",
    "gulp": "gulp",
    "karma": "karma",
    "BABEL_ENV=test nyc": "BABEL_ENV=test nyc",

    "start": "node ./dist/server",

    "test": "BABEL_ENV=test nyc ava",
      "pretest": "gulp lint",
      "posttest": "flow",

    "build": "concurrently 'npm run build:client' 'npm run build:server' 'npm run build:app'",
    "build:client": "brunch build --production",
    "build:server": "BABEL_ENV=node babel --out-dir ./dist/server ./server",
    "build:app": "BABEL_ENV=node babel --out-dir ./dist/app ./app",
      "prebuild": "gulp clean",
      "postbuild": "gulp htmlhint",

    "dist": "npm run build",
      "predist": "npm test",
      "postdist": "gulp optimize",

    "package": "npm pack",
      "prepackage": "npm run dist",

    "deploy": "gulp deploy",
      "predeploy": "npm run dist",

    "heroku-postbuild": "npm run dist",

    "format": "concurrently 'standard --fix' 'stylefmt -R app'",
    "report": "BABEL_ENV=test nyc report",
    "integration": "karma start --single-run",

    "client": "brunch watch --server",
    "server": "BABEL_ENV=node babel-watch ./server",
    "watch": "gulp watch",
    "watch:test": "BABEL_ENV=test ava --watch",
    "watch:integration": "karma start"
  },
  "main": "./index.js",
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "files": [
    "npm-shrinkwrap.json",
    "index.js",
    "dist",
    "public"
  ],
  "babel": {
    "presets": [
      "stage-1",
      "react"
    ],
    "env": {
      "node": {
        "ignore": [
          "**/*.spec.js"
        ],
        "presets": [
          "node6"
        ],
        "plugins": [
          [
            "css-modules-transform",
            {
              "preprocessCss": "./preprocess-css.js",
              "generateScopedName": "[name]__[local]___[hash:base64:5]"
            }
          ]
        ]
      },
      "test": {
        "presets": [
          "node6"
        ],
        "plugins": ["css-modules-transform"]
      },
      "development": {
        "presets": [
          "es2015"
        ]
      },
      "production": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "app/**/*.spec.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "isomorphic-fetch"
    ],
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "check-coverage": false,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "exclude": [
      "node_modules",
      "app/*.js",
      "app/**/index.js",
      "app/constants/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "fetch",
      "Generator"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "engines": {
    "node": "6.9.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-intl": "^2.1.3",
    "react-intl-redux": "^0.1.0",
    "react-redux": "^4.4.5",
    "react-router5": "^4.0.0",
    "redux": "^3.5.2",
    "redux-actions": "^0.12.0",
    "redux-logger": "^2.6.1",
    "redux-router5": "^4.2.0",
    "redux-saga": "^0.12.0",
    "router5": "^4.0.4",
    "router5.helpers": "^1.1.0",
    "sanitize.css": "^4.1.0"
  },
  "devDependencies": {
    "auto-reload-brunch": "^2.1.0",
    "ava": "^0.16.0",
    "babel-brunch": "^6.0.6",
    "babel-eslint": "^7.0.0",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-watch": "^2.0.2",
    "brunch": "^2.9.1",
    "brunch-static": "^1.2.1",
    "chai": "^3.5.0",
    "cheerio": "^0.22.0",
    "clean-css-brunch": "^2.0.0",
    "concurrently": "^3.0.0",
    "del-cli": "^0.2.0",
    "enzyme": "^2.4.1",
    "eslint-plugin-flowtype": "^2.17.1",
    "flow-bin": "^0.33.0",
    "gh-pages": "^0.11.0",
    "git-rev-sync": "^1.4.0",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.2.0",
    "gulp-flowtype": "^1.0.0",
    "gulp-htmlhint": "^0.3.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-load-plugins": "^1.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-rev-all": "^0.9.7",
    "gulp-standard": "^8.0.0",
    "gulp-stylelint": "^3.2.0",
    "gulp-watch": "^4.3.5",
    "gulplog": "^1.0.0",
    "html-brunch-static": "^1.2.1",
    "javascript-brunch": "^2.0.0",
    "karma": "^1.2.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.0.0",
    "karma-json-fixtures-preprocessor": "0.0.6",
    "karma-mocha": "^1.1.1",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "postcss-brunch": "^2.0.5",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.1.2",
    "react-addons-test-utils": "^15.3.0",
    "run-sequence": "^1.2.2",
    "stylefmt": "^4.3.1",
    "stylelint-config-standard": "^14.0.0",
    "uglify-js-brunch": "^2.0.1"
  }
}
