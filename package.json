{
  "name": "tasty-pokedex",
  "version": "0.0.0",
  "description": "Pokédex using the Pokéapi.",
  "private": true,
  "keywords": [
    "brunch"
  ],
  "homepage": "https://github.com/rxlabs/tasty-pokedex",
  "bugs": "https://github.com/rxlabs/tasty-pokedex/issues",
  "repository": "rxlabs/tasty-pokedex",
  "license": "MIT",
  "author": {
    "name": "Evan Sosenko",
    "email": "razorx@evansosenko.com"
  },
  "scripts": {
    "ava": "ava",
    "brunch": "brunch",
    "flow": "flow",
    "gulp": "gulp",
    "nyc": "nyc",
    "standard-format": "standard-format",

    "test": "nyc ava",
      "pretest": "gulp lint",
      "posttest": "flow",

    "build": "concurrently 'npm run build:client' 'npm run build:server' 'npm run build:app'",
    "build:client": "brunch build --production",
    "build:server": "BABEL_ENV=node babel --out-dir ./build/server ./server",
    "build:app": "BABEL_ENV=node babel --out-dir ./build/app ./app",
      "prebuild": "gulp clean",
      "postbuild": "gulp htmlhint",


    "dist": "npm run build",
      "predist": "npm test",
      "postdist": "gulp minify",

    "deploy": "gulp deploy",
      "predeploy": "npm run dist",

    "format": "standard-format --write",
    "report": "nyc report",

    "start": "brunch watch --server",
    "server": "babel-node ./server",
    "watch": "gulp watch",
    "watch:test": "ava --watch"
  },
  "main": "./build/server/main.js",
  "files": [
    "build",
    "public"
  ],
  "babel": {
    "presets": [
      "stage-1",
      "react"
    ],
    "env": {
      "node": {
        "presets": [
          "node6"
        ]
      },
      "development": {
        "presets": [
          "es2015"
        ]
      },
      "production": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "app/**/*.spec.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "isomorphic-fetch"
    ],
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "check-coverage": false,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "exclude": [
      "app/*.js",
      "app/**/index.js",
      "app/constants/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "fetch",
      "Generator"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-intl": "^2.1.3",
    "react-intl-redux": "^0.1.0",
    "react-redux": "^4.4.5",
    "react-router5": "^3.1.0",
    "redux": "^3.5.2",
    "redux-actions": "^0.10.1",
    "redux-logger": "^2.6.1",
    "redux-router5": "^3.1.0",
    "redux-saga": "^0.11.0",
    "router5": "^3.0.3",
    "router5-history": "^3.0.4",
    "router5.helpers": "^1.1.0",
    "sanitize.css": "^4.1.0"
  },
  "devDependencies": {
    "auto-reload-brunch": "^2.1.0",
    "autoprefixer": "^6.3.1",
    "ava": "^0.16.0",
    "babel-brunch": "^6.0.0",
    "babel-eslint": "^6.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.5.0",
    "brunch": "^2.5.2",
    "brunch-static": "^1.1.1",
    "concurrently": "^2.2.0",
    "cssnano": "^3.4.0",
    "del-cli": "^0.2.0",
    "enzyme": "^2.4.1",
    "eslint": "^2.1.0",
    "eslint-plugin-flowtype": "^2.4.0",
    "flow-bin": "^0.30.0",
    "gh-pages": "^0.11.0",
    "git-rev-sync": "^1.4.0",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.2.0",
    "gulp-flowtype": "^1.0.0",
    "gulp-htmlhint": "^0.3.1",
    "gulp-htmlmin": "^2.0.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-load-plugins": "^1.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-rev-all": "^0.8.24",
    "gulp-sass-lint": "^1.1.1",
    "gulp-standard": "^7.0.1",
    "gulp-watch": "^4.3.5",
    "html-brunch-static": "^1.2.1",
    "javascript-brunch": "^2.0.0",
    "nyc": "^7.1.0",
    "postcss-brunch": "^0.6.0",
    "react-addons-test-utils": "^15.3.0",
    "sass-brunch": "^2.0.0",
    "sass-lint": "^1.5.0",
    "standard": "^7.0.1",
    "standard-format": "^2.2.2",
    "uglify-js-brunch": "^2.0.1"
  }
}
